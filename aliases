# TERRAFORM  #
function terraform() {
        env > $HOME/.docker_env ;
        local p1 ; [ -v $TF_VERSION ] && echo "TF_VERSION variable not specified. Using tag 'latest'..." || p1=":${TF_VERSION}" ;
        docker run --rm --env-file $HOME/.docker_env -it -v $PWD:/work -w /work hashicorp/terraform${p1} ${@} ;
}

# GIT #
function git () {
    	docker run --rm -it -v ${HOME}:/root -w /root/${PWD#$HOME} alpine/git ${@}
}
